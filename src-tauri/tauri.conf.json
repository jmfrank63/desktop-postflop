{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173"
  },
  "bundle": {
    "active": true,
    "category": "Utility",
    "copyright": "Copyright (C) 2022 Wataru Inariba",
    "targets": ["deb"],
    "externalBin": [],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    },
    "longDescription": "",
    "macOS": {
      "entitlements": null,
      "exceptionDomain": "",
      "frameworks": [],
      "providerShortName": null,
      "signingIdentity": null,
      "minimumSystemVersion": "11.7"
    },
    "resources": [],
    "shortDescription": "",
    "linux": {
      "deb": {
        "depends": []
      }
    }
  },
  "productName": "desktop-postflop",
  "mainBinaryName": "desktop-postflop",
  "version": "0.2.7",
  "identifier": "b-inary.desktop-postflop",
  "plugins": {},
  "app": {
    "windows": [
      {
        "title": "Desktop Postflop",
        "width": 1350,
        "height": 810,
        "minWidth": 1080,
        "minHeight": 720,
        "useHttpsScheme": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; img-src 'self' data:;; connect-src ipc: http://ipc.localhost"
    }
  }
}
